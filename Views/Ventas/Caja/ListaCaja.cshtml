@model List<SmartStock.Models.Caja>


@{
    ViewData["Title"] = "Lista de Caja";
    Layout = "~/Views/Shared/_LayoutB.cshtml";
}

<h3 class="mb-4">Gestión de Cajas</h3>

@*Solamente Super Administrador puede agregar nuevas cajas*@
@if (User.IsInRole("Super Administrador"))
{
    <p class="mb-0 d-flex">
        <a class="btn btn-success" asp-area="" asp-controller="Caja" asp-action="Caja">Agregar Caja</a>
    </p>
}
<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>


<script>
    $(document).ready( function () {
        let table = new DataTable('#myTable', {
            responsive: true,      // Hace la tabla adaptable a móviles
        language: {
           url: '/js/es-ES.json'
        }
    });
    } );
</script>

<table class="table table-striped table-responsive table-hover table-sm" id="myTable">
    <thead>
        <tr>
            <th>Id Caja</th>
            <th>Usuario apertura</th>
            <th>Usuario cierre</th>
            <th>Codigo caja</th>
            <th>Fecha Apertura</th>
            <th>Fecha Cierre</th>
            <th>Monto apertura</th>
            <th>Ingresos</th>
            <th>Devoluciones</th>
            <th>Activo</th>
            <th>Opciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var caja in Model)
        {
            <tr>
                <td>@caja.ID_Caja</td>
                <td>@caja.Usuario_Apertura</td>
                <td>@caja.Usuario_Cierre</td>
                <td>@caja.Cod_Caja</td>
                <td>@caja.Fecha_Apertura</td>
                <td>@caja.Fecha_Cierre</td>
                <td>@caja.Monto_Apertura</td>
                <td>@caja.Ingresos</td>
                <td>@caja.Devoluciones</td>
                <td>@(caja.Estado ? "Sí" : "No")</td>
                <td>
                    <div class="row">
                        <div class="col-6 text-center">
                            <a class="btn btn-detalles" data-bs-toggle='tooltip' data-bs-placement='top' title='Caja' asp-controller="Caja" asp-action="Caja" asp-route-ID_Bodega="@caja.ID_Caja">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

