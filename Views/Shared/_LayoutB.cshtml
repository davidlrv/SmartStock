@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartStock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartStock.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.16.1/dist/sweetalert2.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />



    <meta name="author" content="SmartStock">
    <meta name="description" content="Sistema de inventario y punto de venta eficiente y fácil de usar. Controla tu stock, ventas y clientes desde una plataforma centralizada.">
    <meta name="keywords" content="sistema de inventario, punto de venta, POS, gestión de stock, facturación, ventas, control de productos, Nicaragua">
    <meta name="robots" content="index, follow">
    <meta name="theme-color" content="#19875405"> <!-- Color de la interfaz en navegadores móviles -->
    <meta property="og:title" content="Sistema de Inventario y Punto de Venta">
    <meta property="og:description" content="Optimiza tu negocio con un sistema de inventario y punto de venta ágil y seguro.">
    <meta property="og:image" content="@Configuration["Config:UrlLogo"]">
    <meta property="og:url" content="@Configuration["Config:UrlLogo"]">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="@Configuration["Config:UrlLogo"]">
    <meta name="twitter:title" content="Sistema de Inventario y Punto de Venta">
    <meta name="twitter:description" content="Gestiona tu inventario y ventas de manera eficiente con nuestra solución todo en uno.">
    <meta name="twitter:image" content="@Configuration["Config:UrlLogo"]">

</head>
<body>
  

    <div class="container-fluid overflow-hidden">
        <div class="row vh-100 overflow-auto">
            <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-dark d-flex sticky-top">
                <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2 text-white">
                    <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5">S<span class="d-none d-sm-inline">martStock</span></span>
                    </a>
                    <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start" id="menu">
                        @* Inicio *@
                        <li class="nav-item">
                            <a href="#" class="nav-link px-sm-0 px-2">
                                <i class="fs-5 bi-speedometer2"></i><span class="ms-1 d-none d-sm-inline">Inicio</span>
                              
                            </a>
                        </li>
                        @* Inventario *@
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fs-5 bi-box"></i><span class="ms-1 d-none d-sm-inline">Inventario</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-box-fill"></i> Producto</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-boxes"></i> Categorias</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventario" asp-action="ListaBodega"> <i class="bi bi-bounding-box"></i> Bodega</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-file-text"></i> Reportes</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-gear"></i> Ajustes</a></li>
                            </ul>
                        </li>
                        @* Compras *@
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fs-5 bi-cart-plus"></i><span class="ms-1 d-none d-sm-inline">Compras</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-cart-plus-fill"></i> Ordenes de Compra</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-cart-check"></i> Recibir Compras</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-building-gear"></i> Proveedores</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-file-text"></i> Reportes</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-gear"></i> Ajustes</a></li>
                            </ul>
                        </li>
                        @* Ventas *@
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fs-5 bi-bag-check"></i><span class="ms-1 d-none d-sm-inline">Ventas</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-bag-check-fill"></i> POS </a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-bag-plus"></i>Facturación </a></li>
                                <li><a class="dropdown-item" asp-controller="Caja" asp-action="ListaCaja"> <i class="bi bi-cash-coin"></i> Caja</a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-people"></i> Clientes </a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-file-text"></i> Reportes</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-gear"></i> Ajustes</a></li>
                            </ul>
                        </li>
                        @* configuracion*@
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fs-5 bi-tools"></i><span class="ms-1 d-none d-sm-inline"> Configuración </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-house-gear"></i> Negocio </a></li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-sliders2"></i> Impueestos </a></li>
                               
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"> <i class="bi bi-gear"></i> Consecutivos </a></li>
                            </ul>
                        </li>

                    </ul>
                    @* Usuario *@
                    <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                           @*  <img src="https://github.com/mdo.png" alt="hugenerd" width="28" height="28" class="rounded-circle"> *@
                            <i class="fs-3 bi-person-gear"></i>
                            <span class="d-none d-sm-inline mx-1"> @User.Identity.Name </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Usuarios">  <i class="bi bi-person-fill-gear"></i> Gestion de Usuarios</a></li>
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="ListaRoles"><i class="bi bi-gear"></i>  Roles </a></li>
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Perfil" asp-route-Id_Usuario="@User.FindFirst("Id_Usuario")?.Value"> <i class="bi bi-person-check"></i> Mi Perfil</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Salir"> <i class="bi bi-box-arrow-left"></i> Cerrar la Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            @* RenderBody *@
            <div class="col d-flex flex-column h-sm-100">
                <main class="row overflow-auto">
                    <div class="col-12">
                    @RenderBody()
                   </div>
                </main>
                <footer class="row bg-light py-4 mt-auto">
                    <div class="col"> Footer content here... </div>
                </footer>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.all.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="  crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
